@model Api.Models.HotelViewModel

@{
    ViewData["Title"] = "EditHotel";
}

<h1>EditHotel</h1>

<hr />

<div class="col-md-6">
    <form asp-action="EditHotel" asp-controller="Home" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Name" class="control-label">Name</label>
            <input asp-for="Name" class="form-control" value="@Model.Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Stars" class="control-label">Stars</label>
            <input asp-for="Stars" class="form-control" type="number" value="@Model.Stars" />
            <span asp-validation-for="Stars" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Address" class="control-label">Address</label>
            <input asp-for="Address" class="form-control" value="@Model.Address" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
            <input asp-for="PhoneNumber" class="form-control" type="text" value="@Model.PhoneNumber" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="RoomIds" class="control-label">Rooms</label>
            <select asp-for="RoomIds" asp-items="ViewBag.Rooms" class="form-control" multiple></select>
        </div>

        <div class="form-group"
             style="margin-top: 20px;
            margin-bottom: 20px;">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    <a asp-action="ListHotels">Back to List</a>
</div>
